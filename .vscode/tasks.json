        {
            "type": "shell",
            "label": "Rose Parse",
            "command": "rose.parser",
            "args": [
                "-I",
                "world.h",
                "-O",
                "world.serializer.h"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
            }
        },

        {
            "type": "shell",
            "label": "Rose Compile",
            "command": "rose.compile",
            "args": [
                "${file}",
                "-v",
                "-o", ".build\\${fileBasenameNoExtension}.dll",
            ],
            "options": {
                "cwd": "${fileDirname}\\.."
            },
            "dependsOn": ["Rose Parse"],
            "group": {
                "kind": "build",
            }
        },

        {
            "type": "shell",
            "label": "Rose Clean",
            "command": "Remove-Item",
            "args": [
                "*.obj,",
                "*.pdb",
            ],
            "options": {
                "cwd": "${fileDirname}\\.."
            },
            "dependsOn": ["Rose Compile"],
            "group": {
                "kind": "build",
            }
        },
        
        {
            "type": "shell",
            "label": "Rose Build",
            "command": "echo",
            "args": [
                "Build Finished",
            ],
            "options": {
                "cwd": "${fileDirname}\\.."
            },
            "dependsOn": ["Rose Clean"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },


    ],
    "version": "2.0.0"
}